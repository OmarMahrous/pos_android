<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transprent">

        <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rectangle_round"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:text="ADD MODEL"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/branded"
            style="@style/TextStyle3"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="ENTER MODEL NAME"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textSize="16sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"

            android:layout_marginRight="30dp"
            android:layout_marginTop="25dp"
            android:padding="5dp"
            android:text="CHOOSE BRAND"
            android:textColor="@color/bowntext"
            android:textSize="16sp" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            card_view:cardElevation="5dp">

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:spinnerMode="dropdown" />


        </android.support.v7.widget.CardView>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/close"
        android:layout_width="65dp"
        android:layout_height="65dp"

        android:background="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/createbtn"
        android:layout_alignEnd="@+id/createbtn"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="325dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/layer_9_copy" />


    </RelativeLayout>


    <Button
        android:id="@+id/createbtn"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_marginBottom="325dp"
        android:layout_marginLeft="340dp"
        android:layout_marginStart="340dp"
        android:background="@color/pale_red"
        android:fontFamily="sans-serif"
        android:text="ADD"
        android:textColor="@color/realwhite"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>