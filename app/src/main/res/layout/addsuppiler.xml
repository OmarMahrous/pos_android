<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transprent">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@drawable/rectangle_round"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="ADD SUPPLIER"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/cname"
                style="@style/TextStyle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Enter Company Name"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/caddress"
                style="@style/TextStyle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Enter Company Address"
                android:inputType="textPostalAddress"
                android:padding="10dp" />

            <EditText
                android:id="@+id/sname"
                style="@style/TextStyle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Enter Staff Name"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/sdes"
                style="@style/TextStyle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Enter Staff Designation"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/sph"
                style="@style/TextStyle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Enter Staff Contact No"
                android:inputType="phone"
                android:padding="10dp" />

            <EditText
                android:id="@+id/semail"
                style="@style/TextStyle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Enter Staff Email"
                android:inputType="textEmailAddress"
                android:padding="10dp" />


        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/createbtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginBottom="325dp"
        android:layout_marginLeft="284dp"
        android:layout_marginStart="284dp"
        android:background="@color/pale_red"
        android:fontFamily="sans-serif"
        android:text="ADD"
        android:textColor="@color/realwhite"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2" />

    <RelativeLayout
        android:id="@+id/close"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignEnd="@+id/createbtn"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/createbtn"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="90dp"
        android:background="@color/colorAccent">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/layer_9_copy" />

    </RelativeLayout>


</RelativeLayout>